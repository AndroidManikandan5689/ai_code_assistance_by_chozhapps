{
  "name": "androidmani-ai-code-assistant",
  "displayName": "ChozhaApps AI Code Assistant",
  "author": "ChozhaApps",
  "publisher": "androidmani",
  "license": "ISC",
  "description": "An AI-powered coding assistant that helps with code generation, explanation, and debugging",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.74.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AndroidManikandan5689/ai_code_assistance_by_chozhapps.git"
},
  "categories": [
    "Other",
    "Machine Learning",
    "Snippets"
  ],
  "keywords": [
    "ai",
    "assistant",
    "code",
    "claude",
    "openai",
    "copilot"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ai-assistant.explainCode",
        "title": "AI: Explain Selected Code"
      },
      {
        "command": "ai-assistant.generateCode",
        "title": "AI: Generate Code from Comment"
      },
      {
        "command": "ai-assistant.optimizeCode",
        "title": "AI: Optimize Selected Code"
      },
      {
        "command": "ai-assistant.debugCode",
        "title": "AI: Debug Selected Code"
      },
      {
        "command": "ai-assistant.addComments",
        "title": "AI: Add Comments to Code"
      },
      {
        "command": "ai-assistant.refactorCode",
        "title": "AI: Refactor Selected Code"
      },
      {
        "command": "ai-assistant.generateTests",
        "title": "AI: Generate Unit Tests"
      },
      {
        "command": "ai-assistant.chatWithAI",
        "title": "AI: Open Chat Panel"
      },
      {
        "command": "ai-assistant.setApiKey",
        "title": "AI: Set API Key"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "submenu": "ai-assistant.submenu",
          "when": "editorHasSelection"
        }
      ],
      "ai-assistant.submenu": [
        {
          "command": "ai-assistant.explainCode",
          "when": "editorHasSelection"
        },
        {
          "command": "ai-assistant.optimizeCode",
          "when": "editorHasSelection"
        },
        {
          "command": "ai-assistant.debugCode",
          "when": "editorHasSelection"
        },
        {
          "command": "ai-assistant.addComments",
          "when": "editorHasSelection"
        },
        {
          "command": "ai-assistant.refactorCode",
          "when": "editorHasSelection"
        },
        {
          "command": "ai-assistant.generateTests",
          "when": "editorHasSelection"
        }
      ]
    },
    "submenus": [
      {
        "id": "ai-assistant.submenu",
        "label": "AI Assistant"
      }
    ],
    "keybindings": [
      {
        "command": "ai-assistant.explainCode",
        "key": "ctrl+alt+e",
        "when": "editorHasSelection"
      },
      {
        "command": "ai-assistant.generateCode",
        "key": "ctrl+alt+g",
        "when": "editorTextFocus"
      },
      {
        "command": "ai-assistant.chatWithAI",
        "key": "ctrl+alt+c"
      }
    ],
    "configuration": {
      "title": "AI Code Assistant by ChozhaApps",
      "properties": {
        "ai-assistant.provider": {
          "type": "string",
          "enum": [
            "anthropic",
            "openai"
          ],
          "default": "anthropic",
          "description": "AI provider to use"
        },
        "ai-assistant.model": {
          "type": "string",
          "default": "claude-3-sonnet-20240229",
          "description": "AI model to use (e.g., claude-3-sonnet-20240229, gpt-4)"
        },
        "ai-assistant.maxTokens": {
          "type": "number",
          "default": 2000,
          "description": "Maximum tokens for AI responses"
        },
        "ai-assistant.temperature": {
          "type": "number",
          "default": 0.1,
          "minimum": 0,
          "maximum": 1,
          "description": "Temperature for AI responses (0 = deterministic, 1 = creative)"
        }
      }
    },
    "views": {
      "explorer": [
        {
          "id": "ai-assistant.chatView",
          "name": "AI Chat",
          "when": "ai-assistant.chatEnabled"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ai-assistant",
          "title": "AI Assistant",
          "icon": "$(robot)"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}
